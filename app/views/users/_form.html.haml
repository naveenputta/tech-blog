- method = action == 'update' ? 'put' : 'post'
- submit_url = case action; when 'register'; register_confirm_users_path; when 'login'; login_confirm_users_path; when 'update'; user_path(@user); end
= form_for @user, method: method, url: submit_url, role: 'form' do |f|
  .form-field.form-group
    = f.text_field :username, placeholder: 'Username', class: 'form-control username', required: true
  .form-field.form-group
    = f.text_field :email, placeholder: 'Email', class: 'form-control email', required: true
  .form-field.form-group
    = f.password_field :password, placeholder: 'Password', class: 'form-control password', required: true
  .form-field.form-group
    = f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'form-control password', required: true
  = submit_tag 'Register', class: 'btn btn-primary btn-lg'
  .action-wrapper
    = link_to 'Have an account ?', login_path